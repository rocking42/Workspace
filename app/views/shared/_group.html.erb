<div class="center">
  <% org.groups.each do |group| %>
    <div class="width row">
      <div class="col s12 m12">
        <div class="card hoverable">
          <div class="card-content white-text">
            <span class="card-title"><p><%= link_to group.name.capitalize, group_path(group) %></p></span>
          </div>
          <div class="card-action">
            <% group.users.each.with_index do |user, i| %>
              <% if user.image && i <= 10 %>
                <%= link_to user, class: "profile-spacing" do %>
                  <%= cl_image_tag("#{user.image}.jpg", class: "image-small")  %>
                <% end %>
              <% end %>
            <% end %>
            <% if group.users.count == 0 %>
              <p style="height:33px;"></p>
            <% end %>
            <% if group.users.count < 6 %>
              <p style="height:3px"></p><p style="height:3px"></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

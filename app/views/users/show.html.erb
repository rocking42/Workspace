<h2><%= @user.name %>'s profile</h2>
<% if @user.image.present? %>
  <%= cl_image_tag("#{@user.image}.jpg", class: "image-profile")  %>
<% else %>
  <%= cl_image_tag("d7lyubpaypdovu59qywz.jpg", class: "image-profile")  %>
<% end %>
<p><%= @user.email %></p>
<p><%= @user.job_title %></p>
<% if @current_user.organisations.blank? %>
  <%= link_to "Find organisation", organisations_path %>
<% end %>
<% if @current_user == @user %>
  <%= link_to "Edit User", edit_user_path(@current_user.id) %>
<% end %>

<h3 class="center">Your Groups</h3>

<div class="center">
  <% @user.groups.each do |group| %>
    <div class="width row">
      <div class="col s12 m12">
        <div class="card blue darken-2 darken-1 hoverable">
          <div class="card-content white-text">
            <span class="card-title"><p><%= link_to group.name.capitalize, group_path(group), class: "blue-text text-lighten-5" %></p></span>
          </div>
          <div class="card-action">
            <% group.users.each.with_index do |user, i| %>
              <% if user.image && i <= 10 %>
                <%= link_to user, class: "profile-spacing" do %>
                  <%= cl_image_tag("#{user.image}.jpg", class: "image-small")  %>
                <% end %>
              <% end %>
            <% end %>
            <% if group.users.count == 0 %>
              <p style="height:33px;"></p>
            <% end %>
            <% if group.users.count < 6 %>
              <p style="height:3px"></p><p style="height:3px"></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

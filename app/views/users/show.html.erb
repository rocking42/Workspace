<h2><%= @user.name %>'s profile</h2>
<p><%= @user.email %></p>
<p><%= @user.job_title %></p>
<% if @current_user.organisations.blank? %>
  <%= link_to "Find organisation", organisations_path %>
<% end %>
<% if @user.image.present? %>
  <%= cl_image_tag("#{@user.image}.jpg") %>
<% end %>

<div class="center">
  <% @user.groups.each do |group| %>
    <div class="width row">
      <div class="col s12 m12">
        <div class="card blue darken-2 darken-1 hoverable">
          <div class="card-content white-text">
            <span class="card-title"><p><%= link_to group.name.capitalize, group_path(group), class: "blue-text text-lighten-5" %></p></span>
          </div>
          <div class="card-action">
            <p>user pictures to come</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="navbar-fixed col m12">
  <nav class="blue">
    <div class="nav-wrapper">
      <%= link_to "WORKSPACE", root_url, class: "left brand-logo hide-on-med-and-down" %>
      <ul id="nav-mobile" class="right">
        <% if @current_user.blank? %>
          <li><%= link_to "Sign Up", new_user_path %></li>
          <li><%= link_to "Login", login_path %></li>
        <% end %>
        <% if @current_user.present? %>
          <li><%= link_to "Workspace", @current_user.organisations.first %></li>
          <li><%= link_to @current_user.name.capitalize, @current_user %></li>
          <li><%= link_to 'Logout', login_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>

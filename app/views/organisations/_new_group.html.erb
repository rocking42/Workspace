<div id="modal1" class="modal">
  <div class="modal-content">
    <%= form_for @group do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>

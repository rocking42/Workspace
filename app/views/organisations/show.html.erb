<% provide(:org, @org.to_yaml) %>
<h2><%= @org.name.capitalize %></h2>
<p><%= @org.description %></p>
<p><%= link_to "Members", org_user_path(@org) %></p>
<p><%= link_to "Shedule", org_cal_path(@org) %></p>

<div class="posts">
  <div class="width row">
    <div class="col s12 m12">
      <div class="card blue darken-2 darken-1 hoverable">
        <div class="card-content white-text">
          <span class="card-title"><p><%= link_to "All posts", organisation_posts_path(@org), class: "blue-text text-lighten-5" %></p></span>
            <% if @all_post.count > 3 %>
              <% 4.times do |n| %>
                <% unless @all_post.blank? %>
                    <p><%= @all_post[n].user.name %>: <%= truncate(@all_post[n].post, separator: " ") %></p>
                <% end %>
              <% end %>
            <% end %>
        </div>
        <div class="card-action">
          <% @org.users.each.with_index do |user, i| %>
            <% if user.image && i <= 10 %>
              <%= link_to user, class: "profile-spacing" do %>
                <%= cl_image_tag("#{user.image}.jpg", class: "image-small")  %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="center">
  <% @org.groups.each do |group| %>
    <div class="width row">
      <div class="col s12 m12">
        <div class="card blue darken-2 darken-1 hoverable">
          <div class="card-content white-text">
            <span class="card-title"><p><%= link_to group.name.capitalize, group_path(group), class: "blue-text text-lighten-5" %></p></span>
          </div>
          <div class="card-action">
            <% group.users.each.with_index do |user, i| %>
              <% if user.image && i <= 10 %>
                <%= link_to user, class: "profile-spacing" do %>
                  <%= cl_image_tag("#{user.image}.jpg", class: "image-small")  %>
                <% end %>
              <% end %>
            <% end %>
            <% if group.users.count == 0 %>
              <p style="height:33px;"></p>
            <% end %>
            <% if group.users.count < 6 %>
              <p style="height:3px"></p><p style="height:3px"></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- TODO add admin verification -->
<p><%= link_to "Add a department", new_group_path %></p>

<% if @current_user.organisations.empty? %>
  <p><%= link_to "Request to join", org_join_path %></p>
<% end %>

<h3><%= @group.name.capitalize %>'s posts</h3>

<hr>
<% @all_posts.each do |post| %>
  <div class="row">
    <div class="col s1">
      <p>
        <%= link_to post.user do %>
          <%= cl_image_tag("#{post.user.image}.jpg", class: "image-small")  %>
        <% end %>
      </p>
    </div>
    <div class="col s11">
      <br>
      <strong><%= post.user.name %></strong>
      <p><%= post.post %></p>
    </div>
  </div>
  <hr>
<% end %>

<%= form_for( @post) do |f| %>
  <p>
  	<%= f.text_area :post, placeholder:"Post here" %>
  </p>
  <%= f.button "Post", class: "btn btn-primary", name: "subaction", value: @group.id %>
<% end %>

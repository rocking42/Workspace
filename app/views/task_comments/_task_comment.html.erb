<div class="row">
  <div class="col s1">
    <p>
      <%= link_to task_comment.user do %>
        <%= cl_image_tag("#{task_comment.user.image}.jpg", class: "image-small")  %>
      <% end %>
    </p>
  </div>
  <div class="col s11">
    <br>
    <p><strong><%= task_comment.user.name %></strong> <%= time_ago_in_words(task_comment.created_at) %> ago</p>
    <p><%= task_comment.comment %></p>
  </div>
</div>

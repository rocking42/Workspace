<div class="row">
  <div class="col s1">
    <p>
      <%= link_to organisation_post.user do %>
        <%= cl_image_tag("#{organisation_post.user.image}.jpg", class: "image-small")  %>
      <% end %>

    </p>
  </div>
  <div class="col s11">
    <br>
    <p><strong><%= organisation_post.user.name %></strong> <%= time_ago_in_words(organisation_post.created_at) %> ago</p>
    <p><%= organisation_post.post.html_safe %></p>
  </div>
</div>
